  "components": {
    "schemas": {
      "CreateMovieDto": {
        "required": [
          "ageRestriction",
          "description",
          "duration",
          "genre",
          "movieName",
          "posterImageUrl",
          "price",
          "trailerUrl"
        ],
        "type": "object",
        "properties": {
          "movieName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "genre": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "ageRestriction": {
            "maximum": 22,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "duration": {
            "maximum": 300,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "price": {
            "maximum": 1000,
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "posterImageUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "trailerUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateShowDto": {
        "required": [
          "movieId",
          "showDate",
          "showTime"
        ],
        "type": "object",
        "properties": {
          "movieId": {
            "type": "integer",
            "format": "int32"
          },
          "showTime": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "showDate": {
            "type": "string",
            "format": "date"
          },
          "availableSeats": {
            "maximum": 100,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "LoginDto": {
        "required": [
          "password",
          "userName"
        ],
        "type": "object",
        "properties": {
          "userName": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "MovieDto": {
        "required": [
          "ageRestriction",
          "description",
          "duration",
          "genre",
          "movieName",
          "posterImageUrl",
          "price",
          "trailerUrl"
        ],
        "type": "object",
        "properties": {
          "movieName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "genre": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "ageRestriction": {
            "maximum": 22,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "duration": {
            "maximum": 300,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "price": {
            "maximum": 1000,
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "posterImageUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "trailerUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegisterUserDto": {
        "required": [
          "dateOfBirth",
          "emailId",
          "firstName",
          "lastName",
          "password",
          "phoneNo",
          "userName"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "lastName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date"
          },
          "emailId": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "format": "email"
          },
          "phoneNo": {
            "minLength": 1,
            "pattern": "^[6-9]\\d{9}$",
            "type": "string"
          },
          "userName": {
            "maxLength": 50,
            "minLength": 3,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[^\\da-zA-Z]).{8,}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ShowDto": {
        "required": [
          "availableSeats",
          "movieId",
          "showDate",
          "showTime"
        ],
        "type": "object",
        "properties": {
          "movieId": {
            "type": "integer",
            "format": "int32"
          },
          "showTime": {
            "minLength": 1,
            "pattern": "^(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$",
            "type": "string"
          },
          "showDate": {
            "type": "string",
            "format": "date"
          },
          "availableSeats": {
            "maximum": 100,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "isHouseFull": {
            "type": "boolean",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
